{
  "manifest_version": 2,
  "name": "Clickbait.fail",
  "description": "Helping rid the world of terrible journalism.",
  "version": "0.1",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScripts.js"]
    }
  ],
  "content_security_policy": "object-src 'self'; script-src 'self'; connect-src 'self' https://api.imgur.com https://www.clickbait.fail",
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  }
}